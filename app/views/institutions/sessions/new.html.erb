<div class="ui three column middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui image header">
            <div class="content">
                Log-in to your institution
            </div>
        </h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui large form'}) do |f| %>
            <div class="ui segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
                    </div>
                </div>

                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
                    </div>
                </div>

                <%= f.submit "Log in", class: 'ui fluid large submit button' %>
            </div>
        <% end %>

        <div class="ui message">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
