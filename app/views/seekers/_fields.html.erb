<div class="field">
  <%= f.label      :name %><br />
  <%= f.text_field :name, autofocus: true %>
</div>

<div class="field">
  <%= f.label      :phone %><br />
  <%= f.text_field :phone %>
</div>

<div class="field">
  <%= f.label      :country %><br />
  <%= f.text_field :country, value: 'Portugal' %>
</div>

<div class="field">
  <%= f.label      :city %><br />
  <%= f.text_field :city, value: 'Lisbon' %>
</div>

<div class="field">
  <%= f.label      :language_list %><br />
  <%= f.text_field :language_list, value: f.object.language_list.to_s %>
</div>

<div class="field">
  <%= f.label      :skill_list %><br />
  <%= f.text_field :skill_list, value: f.object.skill_list.to_s %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
