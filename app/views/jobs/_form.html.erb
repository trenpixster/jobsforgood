<%= form_for @job do |f| %>
  <div class="field">
    <%= f.label      :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label     :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label      :country %><br />
    <%= f.text_field :country, value: 'Portugal' %>
  </div>

  <div class="field">
    <%= f.label      :city %><br />
    <%= f.text_field :city, value: 'Lisbon' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
