<div class="ui container segment fluid">
    <%= form_for @job, html: {class: 'ui large form'} do |f| %>
        <div class="field">
            <%= f.label      :title %><br />
            <%= f.text_field :title, autofocus: true %>
        </div>

        <div class="field">
            <%= f.label     :description %><br />
            <%= f.text_area :description %>
        </div>

        <div class="field">
            <%= f.label      :country %><br />
            <%= f.text_field :country, value: 'Portugal' %>
        </div>

        <div class="field">
            <%= f.label      :city %><br />
            <%= f.text_field :city, value: 'Lisbon' %>
        </div>

        <div class="field">
            <%= f.label      :language_list %><br />
            <%= f.text_field :language_list, value: f.object.language_list.to_s,
              class: 'autocomplete', autocomplete: 'off',
              data: { list: all_languages, minchars: 1 } %>
        </div>

        <div class="field">
            <%= f.label      :skill_list %><br />
            <%= f.text_field :skill_list, value: f.object.skill_list.to_s,
              class: 'autocomplete', autocomplete: 'off',
              data: { list: all_skills, minchars: 1 } %>
        </div>

        <%= f.submit "Add job", class: 'ui primary button' %>
        <a href="<%= company_path %>" class="ui button">Cancel</a>
    <% end %>
</div>
